{
  "compilerOptions": {
    "lib": ["DOM", "ESNext"],
    "outDir": "./dist/",
    "sourceMap": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "es6",
    "jsx": "react",
    "typeRoots": ["node_modules/@types", "src/typings"],
    "types": ["webpack-env", "node"],
    "resolveJsonModule": true,
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@theme": ["src/theme"]
    }
  },
  "include": ["src", "stubs", "ijl.config.js"],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx",
    "node_modules/@types/jest"
  ]
}
